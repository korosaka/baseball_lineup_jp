<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <corners android:radius="10dp" />
            <gradient android:angle="270" android:endColor="#1e90ff" android:startColor="#00ffff" android:type="linear" />
            <stroke android:width="3dp" android:color="#0000ff" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="10dp" />
            <gradient android:angle="270" android:endColor="#bcffff" android:startColor="#efffff" android:type="linear" />
            <stroke android:width="3dp" android:color="#0000ff" />
        </shape>
    </item>
</selector>