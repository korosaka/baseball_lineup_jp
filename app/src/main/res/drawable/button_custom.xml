<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="false" android:state_pressed="false">
        <shape android:shape="rectangle">
            <gradient android:angle="270" android:endColor="#99ccff" android:startColor="#bcddff" android:type="linear" />
            <stroke android:width="2dp" android:color="#000080" />
            <corners android:radius="12dp" />
        </shape>
    </item>
    <item android:state_focused="false" android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient android:angle="270" android:endColor="#000080" android:startColor="#000080" android:type="linear" />
            <stroke android:width="2dp" android:color="#000080" />
            <corners android:radius="12dp" />
        </shape>
    </item>
</selector>