<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <corners android:radius="10dp" />
            <gradient android:angle="270" android:endColor="#0000ff" android:startColor="#6060ff" android:type="linear" />
            <stroke android:width="2dp" android:color="#191970" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="10dp" />
            <gradient android:angle="270" android:endColor="#c1e0ff" android:startColor="#eff7ff" android:type="linear" />
            <stroke android:width="2dp" android:color="#191970" />
        </shape>
    </item>
</selector>